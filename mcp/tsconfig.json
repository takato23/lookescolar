{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "../dist/mcp",
    "rootDir": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./*"],
      "server-only": ["./shims/server-only.ts"]
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts"],
  "exclude": ["../node_modules", "./**/*.test.ts"]
}
