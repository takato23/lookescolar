# ============================================================================
# LookEscolar Production Environment Configuration
# ============================================================================
# Copy this file to .env.production and fill in the values for production
# NEVER commit .env.production to version control
# ============================================================================

# ============================================================================
# Database & Backend (Supabase)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Project Reference (for CLI operations)
SUPABASE_PROJECT_REF=your-project-ref

# ============================================================================
# Multi-Tenant Configuration
# ============================================================================
# JSON mapping of domains to tenant IDs
# Format: {"domain1.com": "tenant-uuid-1", "domain2.com": "tenant-uuid-2"}
MULTITENANT_DOMAIN_MAP={"lookescolar.com": "00000000-0000-0000-0000-000000000001"}

# Default tenant ID (fallback)
NEXT_PUBLIC_MULTITENANT_DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_BUCKET_ORIGINAL=photo-private
STORAGE_BUCKET_PREVIEW=photos
STORAGE_BUCKET=photo-private

# ============================================================================
# Payment Integration (Mercado Pago)
# ============================================================================
# PRODUCTION credentials (replace TEST- with PROD- or APP_USR-)
MP_ACCESS_TOKEN=APP_USR-your-production-access-token
NEXT_PUBLIC_MP_PUBLIC_KEY=APP_USR-your-production-public-key
MP_WEBHOOK_SECRET=your-webhook-secret-for-signature-validation
NEXT_PUBLIC_MP_ENVIRONMENT=production

# ============================================================================
# Rate Limiting (Upstash Redis)
# ============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================================================
# Application Configuration
# ============================================================================
# Your production domain
NEXT_PUBLIC_SITE_URL=https://lookescolar.com
NEXT_PUBLIC_APP_URL=https://lookescolar.com

# Base pricing (in cents)
NEXT_PUBLIC_BASE_PRICE=1000

# ============================================================================
# Security
# ============================================================================
SESSION_SECRET=generate-a-strong-random-secret-here-minimum-32-chars

# ============================================================================
# Environment & Logging
# ============================================================================
NODE_ENV=production
LOG_LEVEL=info

# Disable telemetry in production
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# Feature Flags (Production)
# ============================================================================
# Unified gallery system
FF_UNIFIED_GALLERY_ENABLED=true
FF_FAMILY_IN_GALLERY_ROUTE=true
FF_TOKEN_AUTO_DETECTION=true
FF_LEGACY_FALLBACK_ENABLED=true

# Event photo library
FF_EVENT_PHOTO_LIBRARY_ENABLED=true
FF_EVENT_PHOTO_LIBRARY_VIRTUALIZATION=true
FF_EVENT_PHOTO_LIBRARY_DRAG_DROP=true

# Disable debug features in production
FF_DEBUG_MIGRATION=false
ALLOW_DEV_BYPASS=false

# ============================================================================
# Admin Configuration
# ============================================================================
# Comma-separated list of admin emails
ADMIN_EMAILS=admin@lookescolar.com

# ============================================================================
# Optional: Email Service (if using Resend)
# ============================================================================
# RESEND_API_KEY=re_your_api_key_here

# ============================================================================
# Optional: Monitoring & Analytics
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# ============================================================================
# Build Configuration
# ============================================================================
# Skip Husky hooks during build
HUSKY=0

# Build version (auto-set during deployment)
# BUILD_VERSION=YYYYMMDD
# BUILD_TIMESTAMP=ISO-8601-timestamp
