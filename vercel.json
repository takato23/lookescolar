{
  "ignoreCommand": "if [ \"$VERCEL_ENV\" = \"preview\" ]; then echo 'Skipping preview (PR/branch) deployments'; exit 0; else exit 1; fi",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/admin/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With, X-Request-ID"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/admin/photos-optimized",
      "destination": "/admin/photos-optimized"
    }
  ]
}
