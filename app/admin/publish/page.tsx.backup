                              </SelectItem>
                            );
                          })}
                        
                        {events.length > 50 && (
                          <div className="p-3 text-center border-t mt-2 bg-gray-50">
                            <p className="text-sm text-muted-foreground">
                              Mostrando 50 de {events.length} eventos
                            </p>
